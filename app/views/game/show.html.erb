<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<% if @game_status == :won %>
  <div class="alert alert-success">
    <%= "Congratulations, you won!" %>
  </div>
<% end %>
<% if @game_status == :lost %>
  <div class="alert alert-info">
    <%= "You lost! The words was #{@game.word}" if @game_status == :lost %>
  </div>
<% end %>
<p>Word progress: <%= @word_progress.map { |char| char ? char : '_'}.join ' ' %></p>
