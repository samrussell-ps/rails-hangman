<% presenter = GamePresenter.new(@game, self) %>

<%= presenter.render_alert %>

<%= presenter.render_game_status %>

<p>Word progress: <%= @word_progress.map { |char| char ? char : '_'}.join ' ' %></p>
<p>Bad guesses: <%= @bad_guesses.join ' ' %></p>
<p>Lives left: <%= @lives_left %></p>

<%= render "form" %>

<% content_for :body do %>
  <%= render "keyboard" %>
<% end %>
